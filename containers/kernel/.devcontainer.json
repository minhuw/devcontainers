{
    "name": "Kernel Compile Box",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "C_Cpp.intelliSenseEngine": "Disabled",
                "[c]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 8,
                    "editor.insertSpaces": false,
                    "editor.rulers": [80,100]
                },
                "[cpp]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 8,
                    "editor.insertSpaces": false,
                    "editor.rulers": [80,100]
                }
            },
            "extensions": []
        }
    }
}